{# Flash messages container intégré dans le flux de la page #}
<div class="container mt-4">
    {% for type, messages in app.flashes(['success', 'danger', 'info']) %}
        {% for message in messages %}
            <div class="row justify-content-left">
                <div class="col-md-8">
                    <div class="alert alert-{{ type }} alert-dismissible fade show shadow-lg mb-4" 
                         role="alert"
                         style="border-left: 4px solid; border-radius: 8px;">
                        <div class="d-flex align-items-left">
                            {% if type == 'success' %}
                                <i class="bi bi-check-circle-fill me-2"></i>
                            {% elseif type == 'danger' %}
                                <i class="bi bi-x-circle-fill me-2"></i>
                            {% elseif type == 'info' %}
                                <i class="bi bi-info-circle-fill me-2"></i>
                            {% endif %}
                            
                            <div class="flex-grow-1">
                                {{ message }}
                            </div>
                            
                            <button type="button" 
                                    class="btn-close" 
                                    data-bs-dismiss="alert" 
                                    aria-label="Close"></button>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    {% endfor %}
</div>