{% extends 'base.html.twig' %}

{% block title %}Ville{% endblock %}

{% block body %}
<div class="container py-5">
    <!-- En-tête -->
    <div class="d-flex justify-content-between align-items-center mb-5">
        <h1 class="h3 mb-0 text-primary">
            <i class="fa-solid fa-city me-2"></i> Gestion des Villes
        </h1>
        <a href="{{ path('app_city_new') }}" class="btn btn-primary">
            <i class="fas fa-plus-circle me-1"></i> Ajouter une Nouvelle Ville
        </a>
    </div>

    <!-- Messages Flash -->
    {% include "layouts/flash_msg.html.twig" %}

    <!-- Tableau des villes -->
    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="py-3">Id</th>
                            <th class="py-3">Nom</th>
                            <th class="py-3">Frais de livraison</th>
                            <th class="py-3 text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for city in cities %}
                            <tr>
                                <td class="align-middle">{{ city.id }}</td>
                                <td class="align-middle fw-semibold">{{ city.name }}</td>
                                <td class="align-middle fw-semibold">{{ city.shippingCost }}</td>
                                <td class="align-middle text-end">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a class="btn btn-sm btn-primary rounded-start" 
                                           href="{{ path('app_city_show', {'id': city.id}) }}"
                                           data-bs-toggle="tooltip" title="Voir détails">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <!-- Modifier -->
                                        <a href="{{ path('app_city_edit', {'id': city.id}) }}" 
                                           class="btn btn-outline-primary" 
                                           title="Modifier">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="4" class="text-center py-4 text-muted">
                                    <i class="fas fa-info-circle me-2"></i> Aucune Ville trouvée
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}
