{% block stylesheets %}
{{ parent() }}
<style>
   
    :root {
        --primary-color: #4361ee;
        --secondary-color: #3f37c9;
        --dark-color: #1e1e24;
        --light-color: #f8f9fa;
    }
    
    .login-container {
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        position: relative;
        overflow: hidden;
        background-color: #f5f7ff;
        padding: 20px;
    }
    
    .background-animation {
        position: absolute;
        width: 100%;
        height: 100%;
        z-index: 0;
    }
    
    .background-animation .shape {
        position: absolute;
        border-radius: 50%;
        background: linear-gradient(135deg, rgba(67, 97, 238, 0.1) 0%, rgba(63, 55, 201, 0.1) 100%);
    }
    
    .background-animation .shape:nth-child(1) {
        width: 400px;
        height: 400px;
        top: -100px;
        left: -100px;
    }
    
    .background-animation .shape:nth-child(2) {
        width: 300px;
        height: 300px;
        bottom: -50px;
        right: -50px;
    }
    
    .login-wrapper {
        position: relative;
        z-index: 1;
        width: 100%;
        max-width: 500px;
    }
    
    .login-card {
        background: white;
        border-radius: 16px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
        padding: 2rem;
        transition: all 0.3s ease;
        width: 120%;
    }
    
    .login-form .form-control {
        width: 100%;
        padding-left: 45px;
    }
    
    .login-card:hover {
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.12);
    }
    
    .brand-logo {
        text-align: center;
    }
    
    .brand-logo img {
        max-height: 50px;
    }
    
    .login-title {
        font-weight: 700;
        color: var(--dark-color);
        text-align: center;
        margin-bottom: 0.5rem;
    }
    
    .form-floating {
        position: relative;
    }
    
    .form-icon {
        position: absolute;
        top: 50%;
        left: 15px;
        transform: translateY(-50%);
        color: #6c757d;
        z-index: 5;
    }
    
    .form-floating label {
        padding-left: 45px;
    }
    
    .password-toggle {
        position: absolute;
        top: 50%;
        right: 15px;
        transform: translateY(-50%);
        background: none;
        border: none;
        color: #6c757d;
        cursor: pointer;
        z-index: 5;
    }
    
    .login-btn {
        padding: 12px;
        border-radius: 8px;
        font-weight: 600;
        letter-spacing: 0.5px;
        background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
        border: none;
        transition: all 0.3s ease;
    }
    
    .login-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(67, 97, 238, 0.3);
    }
    
    .form-check {
        display: flex;
        align-items: center;
    }
    
    .form-check-input {
        margin-right: 10px;
    }
    
    .form-check-label a {
        color: var(--primary-color);
        text-decoration: none;
    }
    
    .form-check-label a:hover {
        text-decoration: underline;
    }
    
    .register-link {
        font-weight: 600;
        color: var(--primary-color);
        text-decoration: none;
        transition: all 0.2s;
    }
    
    .register-link:hover {
        color: var(--secondary-color);
        text-decoration: underline;
    }
</style>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Toggle password visibility
        const passwordToggle = document.querySelector('.password-toggle');
        if (passwordToggle) {
            passwordToggle.addEventListener('click', function() {
                const passwordInput = document.getElementById('registerPassword');
                const icon = this.querySelector('i');
                
                if (passwordInput.type === 'password') {
                    passwordInput.type = 'text';
                    icon.classList.replace('bi-eye', 'bi-eye-slash');
                } else {
                    passwordInput.type = 'password';
                    icon.classList.replace('bi-eye-slash', 'bi-eye');
                }
            });
        }
        
        // Form submission loading state
        const registerForm = document.querySelector('.login-form');
        if (registerForm) {
            registerForm.addEventListener('submit', function() {
                const submitBtn = this.querySelector('.login-btn');
                const spinner = submitBtn.querySelector('.spinner-border');
                const btnText = submitBtn.querySelector('.btn-text');
                
                submitBtn.disabled = true;
                spinner.classList.remove('d-none');
                btnText.textContent = 'Inscription en cours...';
            });
        }
    });
    document.addEventListener('DOMContentLoaded', function() {
    // Toggle password visibility for all password fields
    document.querySelectorAll('.password-toggle').forEach(function(toggle) {
        toggle.addEventListener('click', function() {
            const formFloating = this.closest('.form-floating');
            const passwordInput = formFloating.querySelector('input');
            const icon = this.querySelector('i');
            
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                icon.classList.replace('bi-eye', 'bi-eye-slash');
            } else {
                passwordInput.type = 'password';
                icon.classList.replace('bi-eye-slash', 'bi-eye');
            }
        });
    });
    
    // Form submission loading state
    const registerForm = document.querySelector('.login-form');
    if (registerForm) {
        registerForm.addEventListener('submit', function() {
            const submitBtn = this.querySelector('.login-btn');
            const spinner = submitBtn.querySelector('.spinner-border');
            const btnText = submitBtn.querySelector('.btn-text');
            
            submitBtn.disabled = true;
            spinner.classList.remove('d-none');
            btnText.textContent = 'Inscription en cours...';
        });
    }
});
</script>
{% endblock %}
