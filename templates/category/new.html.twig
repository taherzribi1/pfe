{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-5">
    <h2 class="mb-4">
        <i class="fa-solid fa-plus-circle me-2"></i> Créer une Nouvelle Catégorie
    </h2>
    <div class="card shadow-lg">
        <div class="card-body">
            {{ form_start(form) }}
                <div class="mb-3">
                    {{ form_row(form.name, {
                        'label': 'Nom',
                        'label_attr': {'class': "form-label fw-bold"},
                        'attr': {
                            'class': 'form-control', 
                            'placeholder': 'Entrez le nom de la catégorie'
                        }
                    }) }}
                </div>
                <div class="d-flex gap-3">
                    <button type="submit" class="btn btn-primary  d-flex align-items-center">
                        <i class="fas fa-save me-2"></i>Enregistrer
                    </button>
                    <a href="{{ path('app_category') }}" class="btn btn-outline-danger d-flex align-items-center">
                        <i class="fas fa-times me-2"></i>Annuler
                    </a>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
